<Page x:Class="DnDPartyManager.V.CampaignPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:DnDPartyManager.V"
      xmlns:m="clr-namespace:DnDPartyManager.V.UserControls"
      xmlns:s="clr-namespace:DnDPartyManager.S"
      mc:Ignorable="d"
      Title="CampaignPage">
    <Page.Resources>
        <DataTemplate x:Key="CombatTemplate">
            <m:Combat/>
        </DataTemplate>
       
        <DataTemplate x:Key="StoryElementTemplate">
            <m:StoryElement />
        </DataTemplate>
        
        <s:ElementTemplateSelector 
            x:Key="ElementTemplateSelector"
            CombatTemplate="{StaticResource CombatTemplate}"
            StoryElementTemplate="{StaticResource StoryElementTemplate}" />
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>            
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <ComboBox Grid.Row="0" Grid.Column="0" Margin="5" ItemsSource="{Binding Campaigns}" SelectedItem="{Binding Campaign}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"></TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock Grid.Row="1" Grid.Column="0" FontSize="20" Text="Сюжет"></TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="1" FontSize="20" Text="Бои"></TextBlock>
        <ListBox Grid.Row="2" Grid.Column="0" ItemsSource="{Binding Campaign.PlotItems}" ItemTemplateSelector="{StaticResource ElementTemplateSelector}" ScrollViewer.CanContentScroll="False">
        </ListBox>
    </Grid>
</Page>
