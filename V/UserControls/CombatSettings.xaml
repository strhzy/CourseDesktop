<Page x:Class="DnDPartyManager.V.UserControls.CombatSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:DnDPartyManager.V.UserControls"
      xmlns:vm="clr-namespace:DnDPartyManager.VM"
      mc:Ignorable="d"
      Title="CombatSettings" Width="600" Height="400">
    <Page.DataContext>
        <vm:CampaignViewModel/>
    </Page.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Название боя -->
        <wpfui:TextBox Grid.Row="0"
                       Text="{Binding SelectedItem.Name, UpdateSourceTrigger=PropertyChanged}"
                       Margin="0,0,0,10"
                       PlaceholderText="Название боя" />
        <!-- Описание -->
        <TextBox Grid.Row="1"
                 Text="{Binding SelectedItem.Description, UpdateSourceTrigger=PropertyChanged}"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 Margin="0,5,0,0"
                 MaxWidth="500"
                 Height="100"
                 VerticalScrollBarVisibility="Auto" />
        <!-- Счетчик ходов и кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,10">
            <TextBlock Text="Раунд: " />
            <TextBlock Text="{Binding SelectedItem.TurnCounter}" Margin="5,0,20,0" />
            <wpfui:Button Content="Начать бой"
                          Command="{Binding StartCombatCommand}"
                          Margin="0,0,10,0" />
            <wpfui:Button Content="Следующий ход"
                          Command="{Binding NextTurnCommand}"
                          Margin="0,0,10,0" />
            <wpfui:Button Content="Завершить бой"
                          Command="{Binding FinishCombatCommand}"
                          Appearance="Success"/>
        </StackPanel>
        <!-- Действия игроков -->
        <TextBlock Grid.Row="3" Text="{Binding CurrentActionMessage}" FontSize="14" Margin="0,0,0,10" TextWrapping="Wrap"/>
        <!-- Участники -->
        <GroupBox Grid.Row="4" Header="Участники боя">
            <ListBox ItemsSource="{Binding CombatParticipants}">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,5,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Initiative}" Width="50" Margin="0,0,10,0" />
                            <wpfui:TextBox Grid.Column="1"
                                           Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                           Margin="0,0,10,0" />
                            <wpfui:TextBox Grid.Column="2"
                                           Text="{Binding Hp, UpdateSourceTrigger=PropertyChanged, FallbackValue=0}"
                                           Width="50"
                                           Margin="0,0,10,0" />
                            <wpfui:Button Grid.Column="3"
                                          Content="Удалить"
                                          Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}"
                                          CommandParameter="{Binding}"
                                          Appearance="Danger"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
    </Grid>
</Page>