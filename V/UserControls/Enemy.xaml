<UserControl x:Class="DnDPartyManager.V.UserControls.Enemy"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DnDPartyManager.V.UserControls"
             mc:Ignorable="d" MaxWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Имя: " FontSize="20" FontWeight="Bold"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Name}" FontSize="20" FontWeight="Bold"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Размер: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Size}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="ХП: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Hit_points}" FontSize="17.5"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1" Name="pnl" Orientation="Vertical" Visibility="Collapsed">
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Описание: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Desc}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Тип: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Type}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Подтип: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Subtype}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Группа: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Group}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Мировоззрение: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Alignment}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Класс брони: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Armor_class}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Описание брони: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Armor_desc}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Кубики хитов: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Hit_dice}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Скорость: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Speed}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Сила: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Strength}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Ловкость: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Dexterity}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Телосложение: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Constitution}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Интеллект: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Intelligence}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Мудрость: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Wisdom}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Харизма: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Charisma}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Восприятие: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Perception}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Навыки: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Skills}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Уязвимости к урону: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Damage_vulnerabilities}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Сопротивления урону: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Damage_resistances}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Иммунитеты к урону: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Damage_immunities}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Иммунитеты к состояниям: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Condition_immunities}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Чувства: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Senses}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Языки: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Languages}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Рейтинг угрозы: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Challenge_rating}" FontSize="17.5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="CR (число): " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Cr}" FontSize="17.5"/>
            </StackPanel>
            <TextBlock TextWrapping="Wrap" Text="Действия:" FontSize="17.5" FontWeight="Bold"/>
            <ItemsControl ItemsSource="{Binding Actions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Background="LightSlateGray" Margin="3">
                            <TextBlock TextWrapping="Wrap" Text="{Binding Name}" FontSize="17.5"/>
                            <TextBlock TextWrapping="Wrap" Text="{Binding Description}" FontSize="17.5"/>
                            <TextBlock TextWrapping="Wrap" Text="{Binding AttackBonus}" FontSize="17.5"/>
                            <TextBlock TextWrapping="Wrap" Text="{Binding DamageDice}" FontSize="17.5"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <TextBlock TextWrapping="Wrap" Text="Бонусные действия:" FontSize="17.5" FontWeight="Bold"/>
            <ItemsControl ItemsSource="{Binding Bonus_actions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Background="LightSlateGray" Margin="0 2">
                            <TextBlock TextWrapping="Wrap" Text="{Binding Name}" FontSize="17.5"/>
                            <TextBlock TextWrapping="Wrap" Text="{Binding Description}" FontSize="17.5"/>
                            <TextBlock TextWrapping="Wrap" Text="{Binding AttackBonus}" FontSize="17.5"/>
                            <TextBlock TextWrapping="Wrap" Text="{Binding DamageDice}" FontSize="17.5"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <TextBlock TextWrapping="Wrap" Text="Реакции:" FontSize="17.5" FontWeight="Bold"/>
            <ItemsControl ItemsSource="{Binding Reactions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Background="LightSlateGray" Margin="0 2">
                            <TextBlock TextWrapping="Wrap" Text="{Binding Name}" FontSize="17.5"/>
                            <TextBlock TextWrapping="Wrap" Text="{Binding Description}" FontSize="17.5"/>
                            <TextBlock TextWrapping="Wrap" Text="{Binding AttackBonus}" FontSize="17.5"/>
                            <TextBlock TextWrapping="Wrap" Text="{Binding DamageDice}" FontSize="17.5"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <StackPanel Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="Описание легендарных действий: " FontSize="17.5"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Legendary_desc}" FontSize="17.5"/>
            </StackPanel>
            <TextBlock TextWrapping="Wrap" Text="Легендарные действия:" FontSize="17.5" FontWeight="Bold"/>
            <ItemsControl ItemsSource="{Binding Legendary_actions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Background="LightSlateGray" Margin="0 2">
                            <TextBlock TextWrapping="Wrap" Text="{Binding Name}" FontSize="17.5"/>
                            <TextBlock TextWrapping="Wrap" Text="{Binding Description}" FontSize="17.5"/>
                            <TextBlock TextWrapping="Wrap" Text="{Binding AttackBonus}" FontSize="17.5"/>
                            <TextBlock TextWrapping="Wrap" Text="{Binding DamageDice}" FontSize="17.5"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <TextBlock TextWrapping="Wrap" Text="Особые способности:" FontSize="17.5" FontWeight="Bold"/>
            <ItemsControl ItemsSource="{Binding Special_abilities}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Background="LightSlateGray" Margin="0 2">
                            <TextBlock TextWrapping="Wrap" Text="{Binding Name}" FontSize="17.5"/>
                            <TextBlock TextWrapping="Wrap" Text="{Binding Desc}" FontSize="17.5"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
        <Button Grid.Row="2" Name="btn" Click="Btn_OnClick" Visibility="Visible" Content="развернуть"></Button>
    </Grid>
</UserControl>
